Algoritmo "conversordollarrep"
Var
R, D, C: Real
Inicio
      c <- 1
      Enquanto (c <=4) faca
               Escreval ("Qual o valor em R$?")
               Leia (R)
               D <- R/4.69
               Escreval ("O valor em dolar será US$", D:5:2)
               c <- c + 1
      FimEnquanto
      
Fimalgoritmo